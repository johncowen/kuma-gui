{
  "name": "kuma-gui",
  "version": "2.2.0",
  "private": true,
  "description": "Kuma Manager",
  "author": "Kong",
  "main": "src/index.ts",
  "scripts": {
    "deps": "cypress install",
    "dev": "yarn run dev:mock-api",
    "dev:mock-api": "vite -c ./vite.config.development.ts",
    "dev:real-api": "cross-env VITE_MOCK_API_ENABLED=false yarn dev",
    "preview": "yarn build:staging && yarn preview:built",
    "preview:built": "vite preview -c ./vite.config.preview.ts",
    "build": "vite build -c ./vite.config.ts",
    "build:ci": "yarn run build --mode preview -c ./vite.config.development.ts",
    "build:gui": "mkdir gui && mv dist/* gui && mv gui dist/gui && mv dist/gui/mockServiceWorker.js dist/",
    "build:preview": "yarn run build:ci && yarn build:gui && cp _redirects dist/_redirects",
    "build:staging": "cross-env VITE_ZONE_CREATION_FLOW=enabled yarn build && yarn build:gui",
    "lint": "eslint --ext .js,.ts,.vue --fix .",
    "lint:lockfile": "lockfile-lint --path yarn.lock --allowed-hosts yarn --validate-https",
    "lint:ts": "vue-tsc --noEmit",
    "test": "cross-env TZ=UTC VITE_ZONE_CREATION_FLOW=enabled jest",
    "test:browser": "cross-env TZ=UTC cypress run",
    "test:browser:view": "cross-env TZ=UTC KUMA_BASE_URL=http://localhost:8080/gui cypress open",
    "test:watch": "yarn run test --watch"
  },
  "engines": {
    "node": ">=18.13",
    "yarn": "^1.22.0"
  },
  "dependencies": {
    "@kong-ui-public/i18n": "^0.6.1",
    "@kong/kongponents": "^8.84.2-pr.1501.95e436c3.0",
    "brandi": "^5.0.0",
    "chart.js": "^4.3.0",
    "deepmerge": "^4.3.1",
    "js-yaml": "^4.1.0",
    "prismjs": "^1.29.0",
    "semver": "^7.5.2",
    "tailwindcss": "^3.3.2",
    "vue": "^3.3.4",
    "vue-chartjs": "^5.2.0",
    "vue-github-button": "^3.1.0",
    "vue-router": "^4.2.2",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@badeball/cypress-cucumber-preprocessor": "^18.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@faker-js/faker": "^8.0.2",
    "@jest/globals": "^29.5.0",
    "@modyfi/vite-plugin-yaml": "^1.0.4",
    "@types/js-yaml": "^4.0.5",
    "@types/marked": "^5.0.0",
    "@types/prismjs": "^1.26.0",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.0",
    "@vue/vue3-jest": "^29.2.4",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.5.0",
    "babel-plugin-transform-import-meta": "^2.2.0",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "canvas": "^2.11.2",
    "cross-env": "^7.0.3",
    "cypress": "^12.16.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.18.11",
    "eslint": "^8.44.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.15.1",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-serializer-vue": "^3.1.0",
    "jest-transform-stub": "^2.0.0",
    "lockfile-lint": "^4.10.6",
    "marked": "^5.1.0",
    "msw": "~1.2.2",
    "postcss": "^8.4.24",
    "sass": "^1.63.6",
    "standard": "^17.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "~5.1.6",
    "urlpattern-polyfill": "^9.0.0",
    "vite": "^4.3.9",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-rewrite-all": "^1.0.1",
    "vite-svg-loader": "^4.0.0",
    "vue-tsc": "^1.8.3",
    "yaml-jest": "^1.2.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "msw": {
    "workerDirectory": "public"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": [
      "./cypress/main.ts",
      "./cypress/support/step_definitions/*.ts"
    ]
  }
}
